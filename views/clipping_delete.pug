extends layout

block content

  h1 #{title}: #{clipping.name}
  p= clipping.lifespan
  
  if clipping_plants.length
  
    p #[strong Delete the following plants before attempting to delete this clipping.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Plants
    
      dl
      each plant in clipping_plants
        dt 
          a(href=plant.url) #{plant.title}
        dd #{plant.summary}

  else
    p Do you really want to delete this Clipping?
    
    form(method='POST' action='')
      div.form-group
        input#clippingid.form-control(type='hidden',name='clippingid', required='true', value=clipping._id )

      button.btn.btn-primary(type='submit') Delete